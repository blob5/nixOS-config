[input "pointer"]
    acceleration-profile = "flat"
    natural-scroll = true

[input "keyboard"]
    repeat-delay = 300
    repeat-rate = 50
    xkb-layout = "us"
    xkb-variant = ""
    xkb-options = "caps:escape"

